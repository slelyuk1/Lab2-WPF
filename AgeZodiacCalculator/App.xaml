<Application x:Class="AgeZodiacCalculator.AgeZodiacCalculatorApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adapter="clr-namespace:AgeZodiacCalculator.Converter.CustomValueConverter.Adapter"
             Startup="OnStartup">

    <Application.Resources>
        <adapter:AgeInfoValueConverterAdapter x:Key="AgeInfoValueConverter" />
        <adapter:ChineseSignValueConverterAdapter x:Key="ChineseSignValueConverter" />
        <adapter:WesternSignValueConverterAdapter x:Key="WesternSignValueConverter" />
    </Application.Resources>
</Application>